{
    "extends": "stylelint-config-standard",
    "rules": {
        "comment-empty-line-before": [
            "always",
            {
                "except": ["first-nested"],
                "ignoreComments": ["/rtl:.*/"]
            }
        ],
        "selector-max-specificity": [
            "0,1,0",
            {
                "ignoreSelectors": ["/^::?/"]
            }
        ]
    }
}
